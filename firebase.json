{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "firebase-debug.log"
    ],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          },
          {
            "key": "Referrer-Policy",
            "value": "strict-origin-when-cross-origin"
          },
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=31536000; includeSubDomains"
          }
        ]
      },
      {
        "source": "sitemap.xml",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/xml; charset=utf-8"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=86400"
          }
        ]
      },
      {
        "source": "robots.txt",
        "headers": [
          {
            "key": "Content-Type",
            "value": "text/plain; charset=utf-8"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=86400"
          }
        ]
      },
      {
        "source": "**/*.{js,css}",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=604800"
          }
        ]
      },
      {
        "source": "**/*.{svg,png,jpg,jpeg,gif,webp,ico}",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=2592000"
          }
        ]
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false,
    "redirects": [
      {
        "source": "/about.html",
        "destination": "/pages/about.html",
        "type": 301
      },
      {
        "source": "/guide.html",
        "destination": "/pages/guide.html",
        "type": 301
      },
      {
        "source": "/privacy.html",
        "destination": "/pages/privacy.html",
        "type": 301
      },
      {
        "source": "/terms.html",
        "destination": "/pages/terms.html",
        "type": 301
      },
      {
        "source": "/bulletin.html",
        "destination": "/pages/bulletin.html",
        "type": 301
      }
    ],
    "rewrites": [
      {
        "source": "/index.html",
        "destination": "/index.html"
      },
      {
        "source": "/pages/about.html",
        "destination": "/pages/about.html"
      },
      {
        "source": "/pages/guide.html",
        "destination": "/pages/guide.html"
      },
      {
        "source": "/pages/privacy.html",
        "destination": "/pages/privacy.html"
      },
      {
        "source": "/pages/terms.html",
        "destination": "/pages/terms.html"
      },
      {
        "source": "**",
        "destination": "/404.html"
      }
    ]
  }
}
